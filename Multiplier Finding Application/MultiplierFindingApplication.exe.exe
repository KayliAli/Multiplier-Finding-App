from tkinter import *
import tkinter as tk
from tkinter import messagebox
import math

pencere = tk.Tk()
pencere.title("ÇARPAN BULMA UYGULAMASI")
pencere.geometry("500x500+500+150")
pencere.resizable(width=False, height=False)

etiket1 = Label(pencere, text="HOŞGELDİNİZ ", fg="black")
etiket1.pack()
etiket2 = Label(pencere, text="Sayı Giriniz", fg="black", bg="lightblue")
etiket2.place(x=50, y=50)
etiket3 = Label(pencere, text="Sayının Çarpanları :", fg="black", bg="orange")
etiket3.place(x=150, y=127)
etiket4 = Label(pencere, text="Lütfen Çarpanlarını Bulmak İstediğiniz Sayıyı Giriniz;", fg="red", bg="#f8f8ff")
etiket4.place(x=50, y=30)

def temizle():
    sayi1.delete(0, END)
    ekran.config(state=NORMAL)
    ekran.delete('1.0', END)
    ekran.config(state=DISABLED)

def Hesapla():
    try:
        s1 = int(sayi1.get())
        ekran.config(state=NORMAL)
        ekran.delete('1.0', END)
        carpanlar = []
        if s1 == 0:
            ekran.insert(END, "Hata: 0 sayısının çarpanı yoktur.\n")
        else:
            for i in range(1, s1 + 1):
                if s1 % i == 0:
                    carpanlar.append(i)
            ekran.insert(END, f"Girilen Sayı: ", 'mavi')
            ekran.insert(END, f"{s1}\n", 'bold')
            ekran.insert(END, "Çarpanlar: ", 'siyah')
            ekran.insert(END, ' '.join(map(str, carpanlar)) + "\n", 'bold')
        ekran.config(state=DISABLED)
    except ValueError:
        messagebox.showerror("Geçersiz Giriş", "Lütfen geçerli bir sayı girin.")
        ekran.config(state=NORMAL)
        ekran.delete('1.0', END)
        ekran.config(state=DISABLED)

sayi1 = tk.Entry(pencere, font=14, width=10)
sayi1.place(x=130, y=50)

ekran = tk.Text(pencere, height=14, width=28, bg="#f8f8ff", fg="red")
ekran.place(x=140, y=150)
ekran.config(state=DISABLED)
ekran.tag_configure('mavi', foreground='blue')
ekran.tag_configure('siyah', foreground='black')
ekran.tag_configure('bold', font=('Helvetica', 12, 'bold'))

cikis_button = tk.Button(pencere, text="Çıkış", fg="black", bg="#808080", activebackground="red", bd=4, pady=2, padx=7, command=pencere.quit)
cikis_button.place(x=446, y=450)
temizle_button = tk.Button(pencere, text="Temizle", bg="orange", command=temizle)
temizle_button.place(x=305, y=50)
hesapla_button = tk.Button(pencere, text="Hesapla", fg="black", bg="#32cd32", command=Hesapla)
hesapla_button.place(x=250, y=50)

pencere.mainloop()
